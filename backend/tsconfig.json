{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": ".",
    "rootDir": ".",
    "baseUrl": "."
  },
  "exclude": [
    "./coverage/**",
    "./node_modules",
    "./jest.config.js",
    "./dist",
    "./*.js",
    "**/*.spec.ts"
  ],
  "include": [
    "**/*.ts"
  ]
}
