{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "."
  },
  "exclude": [
    "./node_modules",
    "./jest.config.js",
    "**/*.spec.ts"
  ],
  "include": ["src/**/*"]
}
