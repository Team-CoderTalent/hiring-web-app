{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "hiring-app-api",
      "image": "node:0.12",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 8081,
          "containerPort": 8081
        }
      ],
      "command": [
        "/bin/bash",
        "/usr/src/app/run.sh"
      ],
      "mountPoints": [
        {
          "sourceVolume": "node-app",
          "containerPath": "/usr/src/app"
        }
      ]
    },
    {
      "name": "hiring-web-app",
      "image": "node:0.12",
      "essential": true,
      "memory": 64,
      "portMappings": [
        {
          "hostPort": 8082,
          "containerPort": 80
        }
      ]
    }
  ]
}
